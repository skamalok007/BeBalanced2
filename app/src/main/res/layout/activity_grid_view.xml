<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GridViewActivity">


    <TextView
        android:id="@+id/griddata1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/kgsevensixteen"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="How are you Today?"
        android:textColor="#000"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/apple1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/griddata1"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/griddata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="25dp"
        android:text="Apple"
        android:fontFamily="@font/kgsevensixteen"
        android:textColor="#000"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/grid_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/griddata"
        android:layout_marginTop="20dp"
        android:text="0/2"
        android:textColor="#000"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="115dp" />


</RelativeLayout>